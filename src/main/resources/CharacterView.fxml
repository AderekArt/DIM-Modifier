<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import com.github.cfogrady.dim.modifier.controls.ImageIntComboBox?>


<?import javafx.scene.layout.AnchorPane?>
<VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.cfogrady.dim.modifier.controllers.CharacterViewController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <ImageIntComboBox fx:id="characterSelectionComboBox" prefWidth="100.0" />
            <StackPane fx:id="nameBox" maxHeight="25.0" prefWidth="80.0" style="-fx-background-color: black;" />
            <Button fx:id="newCharacterButton" text="Add Character"/>
            <Button fx:id="deleteCharacterButton" text="Delete Character"/>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <HBox spacing="10.0">
         <children>
            <Button fx:id="statsButton" mnemonicParsing="false" text="Stats" />
            <Button fx:id="transformationsButton" mnemonicParsing="false" text="Transformations" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
      <AnchorPane fx:id="subView"/>
   </children>
</VBox>
