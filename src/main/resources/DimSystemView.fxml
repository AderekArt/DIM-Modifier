<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<HBox spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.cfogrady.dim.modifier.controllers.DimSystemViewController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <children>
      <StackPane fx:id="backgroundSpriteContainer" minWidth="160" minHeight="80">
         <children>
            <ImageView fx:id="backgroundsView" fitHeight="160.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true"/>
         </children>
      </StackPane>
      <VBox spacing="10.0">
         <children>
            <StackPane style="-fx-background-color: black;" fx:id="iconSpriteContainer" minWidth="42" minHeight="42">
               <children>
                  <ImageView fx:id="iconSpriteView" pickOnBounds="true" preserveRatio="true"/>
               </children>
            </StackPane>
            <VBox alignment="TOP_CENTER" spacing="10.0">
               <children>
                  <StackPane fx:id="eggSpriteContainer" minWidth="32" minHeight="40">
                     <children>
                        <ImageView fx:id="eggSpritesView" pickOnBounds="true" preserveRatio="true"/>
                     </children>
                  </StackPane>
                  <HBox spacing="10.0">
                     <children>
                        <Button fx:id="prevEggButton" mnemonicParsing="false" text="Prev" />
                        <Button fx:id="nextEggButton" mnemonicParsing="false" text="Next" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
